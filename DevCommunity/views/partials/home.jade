.modal.fade(id='AddTopicModal' aria-hidden='true' role='dialog' ng-controller='AddMeetingController as controller')
  .modal-dialog.modal-lg
    .modal-content.highlight
      button.close(type="button" data-dismiss="modal" aria-hidden="true")&times;
      h1 Add Idea
      form(role='form')
        .form-group
          input.form-control(type='email' placeholder='Email address' required ng-model='controller.meeting.email')
        .form-group
          input.form-control(type='text' placeholder='Short Description' required ng-model='controller.meeting.description')
        .form-group
          textarea.form-control(type='text' placeholder='Details' required ng-model='controller.meeting.details')
        button.btn.btn-lg.btn-success(type='button' ng-click='controller.AddMeeting()') Submit
        span  
        button.btn.btn-lg.btn-danger(type='button' data-dismiss='modal') Cancel

.jumbotron
  .row
    h1 Last Meeting
  .row
    if preview
      .col-sm-4(style="min-width: 300px")
        div
          #{preview}
      .col-md-8
        h3 
          a(href='#') #{lastMeetingTitle}
        p
          | #{description}
    else
      p
        | #{description}
.page-header
  h1 Meeting Ideas  
    button.btn.btn-info.add-button(type='button' data-toggle='modal' data-target='#AddTopicModal')
      span.glyphicon.glyphicon-plus
      span   Add

