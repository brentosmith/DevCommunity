hr
h3 Comments
div(ng-controller='CommentController as controller' id='Comments')
  form
    textarea.form-control.form-control-top.resize-vertical(placeholder="Join the discussion...")
    .input-group
      span.input-group-addon.form-control-bottom
        input(type="checkbox" id="AnonymousComment")
        span  Anonymous
      input.form-control(type="text" readOnly="true")
      span.input-group-btn.form-control-bottom
        button.btn.btn-default.form-control-bottom(type="button") Post

  br
  div(ng-if="commentGroup.comments")
    my-comment(ng-repeat="comment in commentGroup.comments")
  hr
  div.less-important
    div(ng-class="{true: 'subscribed', false: 'unsubscribed'}[isSubscribed]")
      button.link-button(ng-click="controller.toggleSubscribe()")
        span.glyphicon.glyphicon-envelope
        span  Subscribe 
        span.glyphicon.glyphicon-ok