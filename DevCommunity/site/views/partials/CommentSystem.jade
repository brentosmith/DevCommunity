hr
h3 Comments
div(ng-controller='CommentController as controller' id='Comments')
  my-comment-form(placeholder="Join the discussion...", user="author", button="Post")
  form
    textarea.form-control.form-control-top.resize-vertical(placeholder="Join the discussion...")
    div.form-control-bottom.form-control-footer
      span.input-group-addon.form-control-bottom(style="width: 100%; text-align: left")
        input(type="checkbox" id="AnonymousComment" ng-model="isAnonymous" ng-change="controller.updateAuthor()")
        span  Anonymous
      span.input-group-btn.form-control-bottom
        button.btn.btn-default.form-control-bottom(type="button") Post

  br
  div(ng-if="commentGroup.comments")
    my-comment(ng-repeat="comment in commentGroup.comments" author="author" isAnonymous="isAnonymous")
  hr
  div.less-important
    div.pull-left(ng-class="{true: 'subscribed', false: 'unsubscribed'}[isSubscribed]")
      button.link-button(ng-click="controller.toggleSubscribe()")
        span.glyphicon.glyphicon-envelope
        span  Subscribe 
        span.glyphicon.glyphicon-ok
    div.pull-right
      a(href='#!/UserSettings') Subscribe to All